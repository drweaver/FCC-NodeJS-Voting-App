doctype html
extends layout
html
  head
    script(type='text/javascript', src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
  body
    block content
      .container
        if (!user)          
          a(href="/login") Login
          br
          a(href="/register") Register
        if (user)
          p You are currently logged in as #{user.username}
          a(href="/createpoll") Create a new poll
          br
          a(href="/logout") Logout
        br
        h3 Current polls available: 
        //- #{docs} !     
        for doc in docs
          * 
          a(href= "/poll/#{doc._id}") #{doc.name} 
          br
          
